{
    "scripts": {
        "copyEnv:dev": "cp .env.dev .env.local",
        "copyEnv:prod": "cp .env.prod .env.local",
        "dev": "npm run copyEnv:dev && next dev --turbopack",
        "start": "next start",
        "lint": "next lint",
        "cleanCache": "rm -rf .next",
        "build": "npm run cleanCache && npm run copyEnv:prod && next build",
        "postbuild": "next-sitemap",
        "deploy": "npm run build && ./scripts/copy-to-S3.sh",
        "prepare": "husky",
        "typecheck": "tsc --noEmit",
        "pre-commit": "lint-staged && npm run typecheck"
    },
    "dependencies": {
        "next": "^15.3.4",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "remark": "^15.0.1",
        "remark-html": "^16.0.1",
        "styled-components": "^6.1.19"
    },
    "devDependencies": {
        "@types/node": "^22.15.32",
        "@types/react": "^19.1.8",
        "eslint": "^9.29.0",
        "eslint-config-next": "^15.3.4",
        "gray-matter": "^4.0.3",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "next-sitemap": "^4.2.3",
        "prettier": "^3.5.3",
        "typescript": "^5.8.3"
    },
    "lint-staged": {
        "*.{js,ts,jsx,tsx,mjs,json}": "prettier --list-different --write"
    }
}
