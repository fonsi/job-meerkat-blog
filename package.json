{
    "scripts": {
        "copyEnv:dev": "cp .env.dev .env.local",
        "copyEnv:prod": "cp .env.prod .env.local",
        "dev": "npm run copyEnv:dev && next dev --turbopack",
        "start": "next start",
        "lint": "next lint",
        "cleanCache": "rm -rf .next",
        "build": "npm run cleanCache && npm run copyEnv:prod && next build",
        "postbuild": "next-sitemap",
        "deploy": "npm run build && ./scripts/copy-to-S3.sh",
        "prepare": "husky",
        "typecheck": "tsc --noEmit",
        "pre-commit": "lint-staged && npm run typecheck",
        "test:blog:dev": "npm run copyEnv:dev && node scripts/test-blog-generator.js",
        "generate:blog:prod": "npm run copyEnv:prod && node scripts/generate-blog-post.js"
    },
    "dependencies": {
        "next": "^15.3.1",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "remark": "^15.0.1",
        "remark-html": "^16.0.1",
        "styled-components": "^6.3.8"
    },
    "devDependencies": {
        "@types/node": "^22.19.7",
        "@types/react": "^19.2.10",
        "eslint": "^9.39.2",
        "eslint-config-next": "^15.3.1",
        "gray-matter": "^4.0.3",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "next-sitemap": "^4.2.3",
        "prettier": "^3.8.1",
        "typescript": "^5.9.3"
    },
    "lint-staged": {
        "*.{js,ts,jsx,tsx,mjs,json}": "prettier --list-different --write"
    }
}
